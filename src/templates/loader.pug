extends __layout

block title
  title Red Loader - Sons of the forest Mods

block head
  link(rel='stylesheet' href='/static/css/mods.css')
  link(rel='stylesheet' href='/static/css/loader.css')

block body
  .hero(class="min-h-[90%]")
    .hero-content.text-center
      .max-w-md
        h1.text-5xl.font-bold.mb-4
          img.m-auto(src='/static/images/redlogo.png' alt='logo')
        p.py-14
          | #{_("loader.text")}
        .flex.justify-center.flex-wrap
          a.btn.btn-secondary(href="https://github.com/ToniMacaroni/RedLoader" target="_blank" style="min-width: 150px; margin: 8px;") Red Loader
          a.btn.btn-secondary(href="https://github.com/ToniMacaroni/RedManager/releases" target="_blank" style="min-width: 150px; margin: 8px;") Red Manager
  .hero
    .hero-content.text-center
      .max-w-full
        h2.text-2xl.font-bold
          | #{_("loader.featured_mods")}
        #mods-featured-container.flex.flex-wrap.justify-center
          span(class="loading loading-infinity loading-lg text-success center")
block scripts
  script(src='/static/scripts/featured.js' type="module")
