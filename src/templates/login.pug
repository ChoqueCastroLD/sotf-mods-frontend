extends __layout

block head
  //- link(rel='stylesheet' href='/static/css/main.css')

block body
  form#login-form.hero.min-h-screen(action='/login' method='post')
    .hero-content.flex-col(class='lg:flex-row-reverse')
      .text-center(class='lg:text-left')
        h1.text-5xl.font-bold #{_("login.login_now")}
        p.py-6
          | #{_("login.existing_account")}
          br
          | #{_("login.no_account")}
          a(href='/register' class='link link-primary') #{_("login.click_here")}
          | &nbsp;#{_("login.to_register")}
      .card.flex-shrink-0.w-full.max-w-sm.shadow-2xl.bg-base-100
        .card-body
          .form-control
            label.label
              span.label-text #{_("login.email")}
            input.input.input-bordered(type="email", name="email", placeholder=_("login.enter_your_email"))
          .form-control
            label.label
              span.label-text #{_("login.password")}
            input.input.input-bordered(type="password", name="password", placeholder=_("login.enter_your_password"))
            label.label
              a.label-text-alt.link.link-hover(href="/register") #{_("login.register_here")}
          .form-control.mt-6
            button.btn.btn-primary #{_("login.login")}

block scripts
  script(src='/static/scripts/login.js' type="module")
